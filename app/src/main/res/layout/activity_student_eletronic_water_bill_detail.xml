<!-- fragment_bill_payment.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">
    <androidx.appcompat.widget.Toolbar
        android:background="@color/dark_blue"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="4dp"
        android:gravity="left"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

    </androidx.appcompat.widget.Toolbar>
    <!-- Header Title -->
    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Electronic Bill Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="8dp"
            app:contentPadding="16dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">
                     <TextView
                        android:id="@+id/txt_title"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="11/2024"
                        android:textSize="16sp"
                         android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color"
                        android:paddingBottom="8dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Ngày chốt chỉ số"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:paddingBottom="8dp"/>
                    <View android:layout_width="match_parent" android:layout_weight="1" android:layout_height="0dp"/>
                    <TextView
                        android:id="@+id/txt_confirm_date"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="28/11/2024"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color"
                        android:paddingBottom="8dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Chỉ số điện"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:paddingBottom="8dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="80dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_electric"
                            android:layout_marginRight="6dp"
                            />
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Chỉ số đầu"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:paddingBottom="8dp"/>
                        <View android:layout_width="match_parent" android:layout_weight="1" android:layout_height="0dp"/>

                        <TextView
                            android:id="@+id/txt_elec_start_num"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="11,717 Kwh"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_color"
                            android:paddingBottom="8dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="80dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_electric"
                            android:layout_marginRight="6dp"
                            />
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Chỉ số cuối"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:paddingBottom="8dp"/>
                        <View android:layout_width="match_parent" android:layout_weight="1" android:layout_height="0dp"/>

                        <TextView
                            android:id="@+id/txt_elec_end_num"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="11,831 Kwh"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_color"
                            android:paddingBottom="8dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:paddingLeft="80dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_electric"
                            android:layout_marginRight="6dp"
                            />
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Sử dụng"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:paddingBottom="8dp"/>
                        <View android:layout_width="match_parent" android:layout_weight="1" android:layout_height="0dp"/>

                        <TextView
                            android:id="@+id/txt_elec_used_num"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="114 Kwh"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_color"
                            android:paddingBottom="8dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="80dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_money"
                            android:layout_marginRight="6dp"
                            />
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Thành tiền"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:paddingBottom="8dp"/>
                        <View android:layout_width="match_parent" android:layout_weight="1" android:layout_height="0dp"/>

                        <TextView
                            android:id="@+id/txt_elec_amount"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="229,330 Vnđ"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_color"
                            android:paddingBottom="8dp"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Chỉ số nước"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:paddingBottom="8dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="80dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_water"
                            android:layout_marginRight="6dp"
                            />
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Chỉ số đầu"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:paddingBottom="8dp"/>
                        <View android:layout_width="match_parent" android:layout_weight="1" android:layout_height="0dp"/>

                        <TextView
                            android:id="@+id/txt_water_start_num"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="11,717 Kwh"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_color"
                            android:paddingBottom="8dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="80dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_water"
                            android:layout_marginRight="6dp"
                            />
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Chỉ số cuối"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:paddingBottom="8dp"/>
                        <View android:layout_width="match_parent" android:layout_weight="1" android:layout_height="0dp"/>

                        <TextView
                            android:id="@+id/txt_water_end_num"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="11,831 Kwh"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_color"
                            android:paddingBottom="8dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="80dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_water"
                            android:layout_marginRight="6dp"
                            />
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Sử dụng"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:paddingBottom="8dp"/>
                        <View android:layout_width="match_parent" android:layout_weight="1" android:layout_height="0dp"/>

                        <TextView
                            android:id="@+id/txt_water_used_num"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="114 Kwh"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_color"
                            android:paddingBottom="8dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="80dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_money"
                            android:layout_marginRight="6dp"
                            />
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Thành tiền"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:paddingBottom="8dp"/>
                        <View android:layout_width="match_parent" android:layout_weight="1" android:layout_height="0dp"/>

                        <TextView
                            android:id="@+id/txt_water_amount"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="229,330 Vnđ"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_color"
                            android:paddingBottom="8dp"/>

                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_height="2dp"
                    android:background="@color/grey"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Tổng tiền"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:paddingBottom="8dp"/>
                    <View android:layout_width="match_parent" android:layout_weight="1" android:layout_height="0dp"/>
                    <TextView
                        android:id="@+id/txt_total"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="350,000 Vnđ"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color"
                        android:paddingBottom="8dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Trạng thái thanh toán"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:paddingBottom="8dp"/>
                    <View android:layout_width="match_parent" android:layout_weight="1" android:layout_height="0dp"/>
                    <TextView
                        android:id="@+id/badge_payment_status"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Chưa thanh toán"
                        android:textSize="14sp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:textStyle="bold"
                        android:background="@drawable/status_badge_bg"
                        android:textColor="@color/white"
                        android:paddingBottom="8dp"/>
                </LinearLayout>
                <!-- Payment Button -->
                <Button
                    android:id="@+id/btn_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Thanh toán"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/primary_color"
                    app:cornerRadius = "16dp"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>



</LinearLayout>
